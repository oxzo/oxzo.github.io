---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header
	class="fixed left-0 top-0 h-full w-64 bg-[var(--color-surface)] border-r border-[var(--color-border)] p-6 flex flex-col z-50 hidden md:flex"
>
	<div class="mb-8">
		<h2 class="text-xl font-bold tracking-tight terminal-glow">
			<a
				href="/"
				class="text-[var(--color-primary)] hover:text-[var(--color-text-muted)] transition-colors"
				>{SITE_TITLE}</a
			>
		</h2>
	</div>

	<nav class="flex-1 flex flex-col gap-4">
		<div class="flex flex-col gap-2 text-sm font-medium">
			<div
				class="text-[var(--color-text-muted)] text-xs uppercase tracking-wider mb-2"
			>
				[Navigation]
			</div>
			<HeaderLink
				href="/"
				class="block py-1 hover:translate-x-1 transition-transform"
			>
				<span class="mr-2">></span>Home
			</HeaderLink>
			<HeaderLink
				href="/mindmap"
				class="block py-1 hover:translate-x-1 transition-transform"
			>
				<span class="mr-2">></span>Mindmap
			</HeaderLink>
			<HeaderLink
				href="/about"
				class="block py-1 hover:translate-x-1 transition-transform"
			>
				<span class="mr-2">></span>About
			</HeaderLink>
		</div>

		<div class="mt-auto">
			<div
				class="text-[var(--color-text-muted)] text-xs uppercase tracking-wider mb-2"
			>
				[Socials]
			</div>
			<div class="flex flex-col gap-2">
				<a
					href="https://m.webtoo.ls/@astro"
					target="_blank"
					class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors text-sm"
				>
					<span>@mastodon</span>
				</a>
				<a
					href="https://twitter.com/astrodotbuild"
					target="_blank"
					class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors text-sm"
				>
					<span>@twitter</span>
				</a>
				<a
					href="https://github.com/withastro/astro"
					target="_blank"
					class="flex items-center gap-2 text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors text-sm"
				>
					<span>@github</span>
				</a>
			</div>
		</div>
	</nav>

	<div class="mt-8 text-xs text-[var(--color-text-muted)]">v0.98.1</div>
</header>

<!-- Mobile Header (simplified) -->
<header
	class="md:hidden fixed w-full top-0 z-50 bg-[var(--color-surface)] border-b border-[var(--color-border)] p-4"
>
	<div class="flex justify-between items-center">
		<a href="/" class="text-[var(--color-primary)] font-bold"
			>{SITE_TITLE}</a
		>
		<nav class="flex gap-4 text-sm">
			<a href="/">Home</a>
			<a href="/about">About</a>
		</nav>
	</div>
</header>
